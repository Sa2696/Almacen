@model Ventas

@{
    ViewData["Title"] = "Edit";
}


<span style="font-size:20px; text-align:center; ">
    <dt class="list-group-item active">
        Editar venta
    </dt>
</span>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VentasID" />
            <div class="col-xs-9 col-md-7">
                <label asp-for="EmpleadoID" class="control-label"></label>
                <select asp-for="EmpleadoID" class="form-control" asp-items="ViewBag.EmpleadoID"></select>
                <span asp-validation-for="EmpleadoID" class="text-danger"></span>
            </div>
            <div class="col-xs-9 col-md-7">
                <label asp-for="ClientesID" class="control-label"></label>
                <select asp-for="ClientesID" class="form-control" asp-items="ViewBag.ClientesID"></select>
                <span asp-validation-for="ClientesID" class="text-danger"></span>
            </div>
            <div class="col-xs-9 col-md-7">
                <label asp-for="ProductosID" class="control-label"></label>
                <select asp-for="ProductosID" class="form-control" asp-items="ViewBag.ProductosID"></select>
                <span asp-validation-for="ProductosID" class="text-danger"></span>
            </div>
            <div class="col-xs-9 col-md-7">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="col-xs-5" style="margin-top:30px">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div style="margin-top:30px">
    <a type="button" class="btn btn-primary" asp-action="Index">Volver atras </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
