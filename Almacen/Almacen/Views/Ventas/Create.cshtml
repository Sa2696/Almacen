@model Ventas

@{
    ViewData["Title"] = "Create";
}

<script src="https://kit.fontawesome.com/3c52229e0a.js" crossorigin="anonymous"></script>

<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Ingrese los datos de la venta
    </h3>

</div>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-12">
                <label asp-for="EmpleadoID" class="control-label">Vendedor</label>
                <select asp-for="EmpleadoID" class="form-control" asp-items="ViewBag.EmpleadoID"></select>
            </div>
            <div class="col-lg-12">
                <label asp-for="ClientesID" class="control-label">Cliente</label>
                <select asp-for="ClientesID" class="form-control" asp-items="ViewBag.ClientesID"></select>
            </div>
            <div class="col-lg-12">
                <label asp-for="ProductosID" class="control-label">Producto</label>
                <select asp-for="ProductosID" class="form-control" asp-items="ViewBag.ProductosID"></select>
            </div>
            <div class="col-sm-8" style="margin-top:50px">
                <button type="submit" class="btn btn-success btn-sm btn-block">Create</button>
            </div>
        </form>
    </div>
</div>
<div style="margin-top:30px">
    <a type="button" class="btn btn-primary btn-sm  btn-lg" asp-action="">Volver atras </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
