@model Empleados

@{
    ViewData["Title"] = "Crear Empleados";
}

<script src="https://kit.fontawesome.com/3c52229e0a.js" crossorigin="anonymous"></script>

<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Ingrese los datos del Empleado
    </h3>

</div>
<br />
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-xs-5">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-xs-5">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="col-xs-5">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>

            <div class="col-xs-5">
                <label asp-for="Sueldo" class="control-label"></label>
                <input asp-for="Sueldo" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>

            <div class="col-xs-5">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <div class="col-xs-5">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <hr />
            <div class="col-sm-8" style="margin-top:50px">
                <button type="submit" class="btn btn-success btn-sm btn-block">Create</button>
            </div>
        </form>
    </div>
</div>
<div style="margin-top:30px">
    <a type="button" class="btn btn-primary btn-sm btn-lg" asp-action="">Volver atras </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
